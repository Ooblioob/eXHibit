<h4>Search IMDB database for streams</h4>
<br/>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/search", method: "get") do %>
        <div class="input-group">
          <%= text_field_tag(:q, nil, placeholder: 'Search IMDB for...', class: 'form-control') %>
          <span class="input-group-btn">
            <%= submit_tag("Go!", class: "btn btn-default") %>
          </span>
        </div>
    <% end %>
  </div>
</div>
<br/>
<%-	 if @streams.present? %>
    <div class="row">
      <% @streams['Search'].each do |stream| %>
          <div class="col-sm-2 col-lg-2 col-md-2">
            <div class="thumbnail">
              <image src="<%=	 stream['Poster'] %>" xlink:href="<%=	 stream['Poster'] %>"></image>
              <div class="caption">
                <h4>
                  <%= stream['Title'] %>
                </h4>
                <p class="plot">
                  <%=	 stream['Plot'] %>
                </p>
              </div>
            </div>
          </div>
      <%end%>
    </div>
<% end %>